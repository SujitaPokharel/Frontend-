extend layout
block content
    script(src='/javascripts/signup.js')
    div(ng-controller="SignUpController as form")
        span {{signUp.fullname}}
        form.form-signin( ng-submit="submitForm()")
            h2.form-signin-heading Fill your information
            table.table
                tr                
                    td Full Name: 
                    td 
                        input.form-control(type='text' name='fullname',  ng-model="user.fullname")
                tr
                    td Email: 
                    td 
                        input.form-control(type='email',  ng-model="user.email")
                tr
                    td Password: 
                    td 
                        input.form-control(type='password',  ng-model="user.password")
                tr
                    td Re- Password: 
                    td 
                        input.form-control(type='password',  ng-model="user.repasword")
                tr
                    td Address: 
                    td 
                        input.form-control(type='text',  ng-model="user.address")
                tr
                    td City: 
                    td 
                        input.form-control(type='city',  ng-model="user.city")
                tr
                    td State: 
                    td 
                        input.form-control(type='state',  ng-model="user.state")
                tr
                    td
                         button.btn.btn-large.btn-primary(type="submit") Submit
                         button.btn.btn-large.btn-default(type="reset", style='margin-left: 10px') Rest
                    td
